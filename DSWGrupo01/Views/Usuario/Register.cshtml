@model DSWGrupo01.Models.UsuarioModel

@{
    ViewBag.Title = "Register";
}

<body style="background: #F4E4C2; min-height: 100vh;">

    <div class="container" style="max-width: 450px; margin-top: calc(50vh - 280px);">
        <div class="card shadow-lg border-0" style="background: #FBF6E9; border-radius: 14px;">
            <div class="card-body p-4">

                <h2 class="text-center mb-4">Registro de usuario</h2>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Dni" class="form-label"></label>
                        <input asp-for="Dni" class="form-control" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contrasenia" class="form-label"></label>
                        <input asp-for="Contrasenia" class="form-control" type="password" />
                        <span asp-validation-for="Contrasenia" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100" style="max-width:300px;">
                            Registrar
                        </button>
                    </div>
                </form>
                <div class="d-flex justify-content-center" style="margin-top:15px">
                    <button asp-controller="Usuario" asp-action="Login" class="btn btn-secondary w-100" style="max-width:300px;">
                    Regresar
                    </button>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
