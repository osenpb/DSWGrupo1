@model DSWGrupo01.Models.UsuarioModel
@{
    ViewBag.Title = "Registro";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<div class="register-wrapper">

    <div class="register-card">

        <h2 class="text-center mb-4 register-title">
            Registro de usuario
        </h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label register-label"></label>
                <input asp-for="Nombre" class="form-control register-input" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Dni" class="form-label register-label"></label>
                <input asp-for="Dni" class="form-control register-input" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label register-label"></label>
                <input asp-for="Direccion" class="form-control register-input" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label register-label"></label>
                <input asp-for="Telefono" class="form-control register-input" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label register-label"></label>
                <input asp-for="Email" class="form-control register-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Contrasenia" class="form-label register-label"></label>
                <input asp-for="Contrasenia" type="password" class="form-control register-input" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>

            <button type="submit" class="btn register-btn w-100 mb-3">
                Registrar
            </button>
        </form>

        <a asp-controller="Usuario"
           asp-action="Login"
           class="btn register-back-btn w-100">
            ← Volver al login
        </a>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
