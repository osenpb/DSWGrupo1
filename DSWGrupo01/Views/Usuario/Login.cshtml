@model DSWGrupo01.Models.UsuarioModel
@{
    ViewBag.Title = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="login-wrapper">

    <div class="login-card">

        <h2 class="text-center mb-4 login-title">
            🎶 Iniciar sesión
        </h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label login-label"></label>
                <input asp-for="Email" class="form-control login-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasenia" class="form-label login-label"></label>
                <input asp-for="Contrasenia" type="password" class="form-control login-input" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>

            <button type="submit" class="btn login-btn w-100">
                Ingresar
            </button>
        </form>

        <p class="mt-4 text-center login-footer mb-0">
            ¿No tienes cuenta?
            <a asp-controller="Usuario" asp-action="Register">Regístrate</a>
        </p>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
