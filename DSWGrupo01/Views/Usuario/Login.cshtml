@model DSWGrupo01.Models.UsuarioModel
@{
    ViewBag.Title = "Login";
}

<body style="background: #F4E4C2; min-height: 100vh;">

    <div class="container" style="max-width: 420px; margin-top: calc(50vh - 200px);">
        <div class="card shadow-lg border-0" style="background: #FBF6E9; border-radius: 14px;">
            <div class="card-body p-4">

                <h2 class="text-center mb-4">Iniciar sesión</h2>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3 d-flex justify-content-center">
                        <div style="width:100%; max-width:300px;">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 d-flex justify-content-center">
                        <div style="width:100%; max-width:300px;">
                            <label asp-for="Contrasenia" class="form-label"></label>
                            <input asp-for="Contrasenia" class="form-control" type="password" />
                            <span asp-validation-for="Contrasenia" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100" style="max-width:300px; background: ">
                            Ingresar
                        </button>
                    </div>
                </form>

                <p class="mt-3 text-center mb-0">
                    ¿No tienes cuenta?
                    <a asp-controller="Usuario" asp-action="Register">Regístrate</a>
                </p>

            </div>
        </div>
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
