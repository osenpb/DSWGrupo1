@model List<CarritoProductoViewModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"/>
 <head>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
       <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
 </head>
@section Styles {
    <link rel="stylesheet" href="~/css/carrito.css" />
}
<div class="container mt-4">
    <h2 class="py-4 text-dark carrito-titulo">🛒 Mi Carrito de Compras</h2>

    @foreach(var item in Model)
    {
        <div class="row border p-2 my-2  p-4 rounded-4 shadow-sm">
            <div class="col-2">
                <img src="@item.Imagen" class="img-fluid vinili-imagen-cariito"/>
            </div>

            <div class="col-6">
                <h5 class="textTitelCarrito">@item.Titulo</h5>
                <p>Precio: @item.Precio.ToString("C", new System.Globalization.CultureInfo("es-PE"))</p>

                <div class="d-flex">
                    <button class="btn btn-outline-secondary btn-menos" data-id="@item.Id" @(item.Cantidad == 1 ? "disabled" : "")>-</button>
                    <span class="px-2">@item.Cantidad</span>
                    <button class="btn btn-outline-secondary btn-mas" data-id="@item.Id">+</button>
                </div>

                <p class="mt-2 precio_carrito">
                    Subtotal:
                    <strong>@item.Subtotal.ToString("C", new System.Globalization.CultureInfo("es-PE"))</strong>
                </p>
            </div>

            <div class="col-4 text-end">
                <form action="/Carrito/Eliminar/@item.Id" method="post">
                    <button class="btn btn-danger">X</button>
                </form>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mt-4 p-3 border rounded-4 shadow-sm total-section">
        <h3 class="mb-0 ">
            Total: <strong>@Model.Sum(x => x.Subtotal).ToString("C", new System.Globalization.CultureInfo("es-PE"))</strong>
        </h3>
        <a href="/Venta/FinalizarCompra" class="btn-send">Ir a pagar</a>
    </div>
</div>


<script>
    document.querySelectorAll(".btn-mas").forEach(btn => {
        btn.addEventListener("click", function () {
            const id = this.dataset.id;

            fetch(`/Carrito/CambiarCantidad?id=${id}&delta=1`)
                .then(() => location.reload());
        });
    });

    document.querySelectorAll(".btn-menos").forEach(btn => {
        btn.addEventListener("click", function () {
            const id = this.dataset.id;

            fetch(`/Carrito/CambiarCantidad?id=${id}&delta=-1`)
                .then(() => location.reload());
        });
    });
</script>