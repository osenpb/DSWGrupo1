@model List<CarritoProductoViewModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"/>

<div class="container mt-4">
    <h2>Mi carrito</h2>

    @foreach(var item in Model)
    {
        <div class="row border p-2 my-2">
            <div class="col-2">
                <img src="@item.Imagen" class="img-fluid"/>
            </div>

            <div class="col-6">
                <h5>@item.Titulo</h5>
                <p>Precio: @item.Precio.ToString("C")</p>

                <div class="d-flex">
                    <button class="btn btn-outline-secondary btn-menos" data-id="@item.Id" @(item.Cantidad == 1 ? "disabled" : "")>-</button>
                    <span class="px-2">@item.Cantidad</span>
                    <button class="btn btn-outline-secondary btn-mas" data-id="@item.Id">+</button>
                </div>

                <p class="mt-2">
                    Subtotal:
                    <strong>@item.Subtotal.ToString("C")</strong>
                </p>
            </div>

            <div class="col-4 text-end">
                <form action="/Carrito/Eliminar/@item.Id" method="post">
                    <button class="btn btn-danger">X</button>
                </form>
            </div>
        </div>
    }

    <h3 class="mt-4">
        Total:
        @Model.Sum(x=>x.Subtotal).ToString("C")
    </h3>

    <a href="/Venta/FinalizarCompra" class="btn btn-success mt-3">Ir a pagar</a>
</div>


<script>
    document.querySelectorAll(".btn-mas").forEach(btn => {
        btn.addEventListener("click", function () {
            const id = this.dataset.id;

            fetch(`/Carrito/CambiarCantidad?id=${id}&delta=1`)
                .then(() => location.reload());
        });
    });

    document.querySelectorAll(".btn-menos").forEach(btn => {
        btn.addEventListener("click", function () {
            const id = this.dataset.id;

            fetch(`/Carrito/CambiarCantidad?id=${id}&delta=-1`)
                .then(() => location.reload());
        });
    });
</script>