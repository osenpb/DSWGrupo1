@model DSWGrupo01.Models.ViniloModel

<h2>@Model.Titulo</h2>

<p>Artista: @Model.Artista</p>
<p>Precio: @Model.Precio €</p>
<img src="@Model.ImagenUrl" style="max-width:300px;" />

<form asp-controller="Carrito" asp-action="Agregar" method="post" class="mt-3">
    <input type="hidden" name="viniloId" value="@Model.Id" />

    <div style="display:flex; align-items:center; gap:10px;">
        <button type="button" id="btnMenos" class="btn btn-outline-secondary">−</button>
        <input id="cantidad" name="cantidad" type="number"
               value="1" min="1"
               style="width:70px; text-align:center;"
               class="form-control" />
        <button type="button" id="btnMas" class="btn btn-outline-secondary">+</button>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Agregar al carrito</button>
</form>

<script>
    const input = document.getElementById("cantidad");
    const minus = document.getElementById("btnMenos");
    const plus = document.getElementById("btnMas");

    minus.addEventListener("click", () => {
        let val = parseInt(input.value);
        if (val > 1) input.value = val - 1;
    });

    plus.addEventListener("click", () => {
        let val = parseInt(input.value);
        input.value = val + 1;
    });
</script>